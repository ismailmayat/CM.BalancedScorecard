
@{
    ViewBag.Title = "Indicators";
}


<div class="indicatorApp" ng-app="indicatorsApp">
    <div ng-controller="indicatorsListCtrl">
        <div class="form-group">
            <input type="text" name="filter" class="form-control" ng-model="filter" ng-keypress="onEnter($event)"/>
        </div>
        <div class="row" ng-repeat="indicator in indicators">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        {{indicator.Name}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{indicator.Description}}
                    </div>
                    <div class="col-md-3">
                        {{indicator.ManagerName}}
                    </div>
                    <div class="col-md-2">
                        {{indicator.LastRecordValue}}/{{indicator.LastTargetValue}}
                    </div>
                    <div class="col-md-1">
                        {{indicator.State}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <canvas id="line" class="chart chart-line" chart-data="data"
                                chart-labels="labels" chart-legend="true" chart-series="series"
                                chart-click="onClick"></canvas> 
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-default btn-xs" ng-click="fetchValues(indicator)" style="width: 100%"><<>></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/Scripts/app/indicators/app.js"></script>
<script src="/Scripts/app/indicators/controllers/list.js"></script>
<script src="/Scripts/app/indicators/services/api.js"></script>